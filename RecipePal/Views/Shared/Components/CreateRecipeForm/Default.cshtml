@model Recipe

<h3 class="text-center">Create a new recipe!</h3>
<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <input hidden asp-for="CookbookId" value="@Model.Cookbook.Id" />
    <input type="submit" class="btn btn-outline-primary rounded-pill m-1" />
</form>